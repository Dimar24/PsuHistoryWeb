@model IEnumerable<PsuHistoryWeb.Domain.Entities.Monuments.Victim>
@{
    Layout = "_AdminLayout";
}

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-6 col-pull-6 justify-content-center font-weight-bold">
                        <h1>Персоны</h1>
                    </div>
                    <div class="col-6 col-push-6 d-flex justify-content-end">
                        <button type="button" class="btn btn-success" asp-action="" onclick="location.href='@Url.Action("Add", "Victim")'">
                            Добавить
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body" style="overflow: auto; padding: 20px 0 0 0;">
                <table class="table">
                    @if (Model.Count().Equals(0))
                    {
                        <thead class="thead-default"><tr><th>Пусто</th></tr></thead>
                    }
                    else
                    {
                        <thead class="thead-default">
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">FirstName</th>
                                <th class="text-center">LastName</th>
                                <th class="text-center">MiddleName</th>
                                <th class="text-center">IsHeroSoviet</th>
                                <th class="text-center">IsPartisan</th>
                                <th class="text-center">DateOfBirth</th>
                                <th class="text-center">DateOfDeath</th>
                                <th class="text-center">TypeVictim</th>
                                <th class="text-center">DutyStation</th>
                                <th class="text-center">BirthPlace</th>
                                <th class="text-center">ConscriptionPlace</th>
                                <th class="text-center">Burial</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="text-center">@Html.DisplayTextFor(modelItem => item.Id)</td>
                                <td class="text-center">@Html.DisplayTextFor(modelItem => item.FirstName)</td>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.LastName)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.MiddleName)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.IsHeroSoviet)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.IsPartisan)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.DateOfBirth)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.DateOfDeath)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.TypeVictim.Name)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.DutyStation.Place)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.BirthPlace.Place)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.ConscriptionPlace.Place)</th>
                                <th class="text-center">@Html.DisplayTextFor(modelItem => item.Burial.NumberBurial)</th>
                                <td class="text-center" style="min-width: 150px">
                                    <button type="button" onclick="location.href='@Url.Action("Look", "Victim", item, null)'" class="btn btn-warning" style="width: 38px; height: 38px; padding: 0"><img src="~/files/project/admin/view.png" style="width: 30px; height: 30px"></button>
                                    <button type="button" onclick="location.href='@Url.Action("Edit", "Victim", item, null)'" class="btn btn-success" style="width: 38px; height: 38px; padding: 0"><img src="~/files/project/admin/edit.png" style="width: 30px; height: 30px"></button>
                                    <button type="button" onclick="location.href='@Url.Action("Delete", "Victim", item, null)'" class="btn btn-danger" style="width: 38px; height: 38px; padding: 0"><img src="~/files/project/admin/delete.png" style="width: 30px; height: 30px"></button>
                                </td>
                            </tr>
                            }
                        </tbody>

                    }
                </table>
            </div>
        </div>
    </div>
</div>