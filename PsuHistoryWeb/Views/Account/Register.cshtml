@model PsuHistoryWeb.Models.RegistrViewModel

@{
    ViewData["Title"] = "Страница регистрации";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-5">
        @using (Html.BeginForm("Register", "Account"))
        {
            @Html.ValidationSummary(true, String.Empty, new { @style = "color:red" })
            <div class="card form-log-reg">
                <div class="card-header text-center">
                    <h2>Регистрация</h2>
                </div>
                <div class="container p-3">
                    <div class="form-group">
                        <label asp-for="UserName">Введите Login</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName, String.Empty, new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Введите пароль</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
                        @Html.ValidationMessageFor(model => model.Password, String.Empty, new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordConfirm">Повторите пароль</label>
                        @Html.TextBoxFor(model => model.PasswordConfirm, new { @class = "form-control", @type = "password" })
                        @Html.ValidationMessageFor(model => model.PasswordConfirm, String.Empty, new { @style = "color:red" })
                    </div>
                    <div>
                        <input type="submit" value="Добавить" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>